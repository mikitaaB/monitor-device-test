{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "nodenext",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "strict": true
  },
  "include": [
    "src",
    "generated"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}